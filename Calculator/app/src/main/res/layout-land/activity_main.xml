                android:text="@string/multiply"
                android:textAllCaps="false"
                android:textColor="#A19D9D"
                android:textSize="18sp"
                app:backgroundTint="#161719" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
